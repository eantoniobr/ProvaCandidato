@using ProvaCandidato.Helper;

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Prova Candidado(a) ASP.NET MVC</title>
  @Styles.Render("~/Assets/css")
  @Scripts.Render("~/bundles/modernizr")
  @RenderSection("head", required: false)
</head>
<body>
  <div class="container body-content">
    <h1 class="title">@ConfigurationHelper.GetAppSettingsByName("NomeEmpresa")</h1>
    <div class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Instruções", "Index", "Home")</li>
            <li>@Html.ActionLink("Cliente", "Index", "Clientes")</li>
            <li>@Html.ActionLink("Cidade", "Index", "Cidades")</li>
          </ul>
        </div>
      </div>
    </div>

    <div id="conteudo">
        @if (@TempData["UserMessage"] != null)
        {
            var alert = System.Web.Helpers.Json.Decode(TempData["UserMessage"] as string);

            <div id="alert" class="alert @(alert.Title == "Sucesso" ? "alert-success" : "alert-danger")">
                <strong>@alert.Title</strong> @(alert.Message)
            </div>
            TempData["UserMessage"] = null;
        }
        @RenderBody()
    </div>
    <footer>
        <div class="linha">2017 &copy; - @ConfigurationHelper.GetAppSettingsByName("NomeEmpresa")</div>
    </footer>
  </div>
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>